<%= render 'detail' %>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td class="center"></td>
            <td class="center"><%= $user_screen_name %></td>
            <td class="center"><%= $user_name %></td>
            <td class="center"></td>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr id="user_<%= user.id %>">
            <td class="center"><%= link_to image_tag(user.profile_image_url, :width => $twitter_image_width), "https://twitter.com/" + user.screen_name %></td>
            <td class="center"><%= link_to user.screen_name, user_path(user) %></td>
            <td class="center"><%= link_to user.name, user_path(user) %></td>
            <td class="center"><%= link_to $action_lend, bookupdate_path(@book.isbn, user.id), :class => "btn btn-success btn-large" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="center">
    <%= link_to $user_add, users_path, :class => "btn btn-primary btn-large" %>
</div>