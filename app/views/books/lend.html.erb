<%= render 'detail' %>

<% if @users.empty? %>

<%= render 'users/create_twitter' %>

<% else %>
<h2><%= $book_lend %></h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td><%= $user_name %></td>
            <td><%= $user_screen_name %></td>
            <td><%= $user_read_count %></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr id="user_<%= user.id %>">
            <td><%= link_to image_tag(user.profile_image_url, :width => $twitter_image_width, :class => "img-rounded"), user_path(user) %><br /><%= link_to user.name, user_path(user), :class => "name" %></td>
            <td><%= link_to user.screen_name, user_path(user) %></td>
            <td><%= user.read_count %></td>
            <td><%= link_to $action_lend, bookupdate_path(@book.isbn, user.screen_name), :class => "btn btn-success btn-large" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="center-horizontal">
    <%= link_to $user_add, users_path, :class => "btn btn-primary btn-large" %>
</div>
<% end %>
