<% if @books.empty? %>
<div class="center">まずは本の登録をしましょう！</div>
<% else %>
<table class="table table-hover">
    <thead>
        <tr>
            <td></td>
            <td><%= $book_title %></td>
            <td></td>
            <td><%= $book_status %></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <% if book.lend_status == 0 %>
                <tr id="book_<%= book.id %>">
                    <td><%= link_to image_tag(book.medium_image, :width => $book_image_width), book_path(book) %></td>
                    <td class="title"><%= link_to book.title, book_path(book) %></td>
                    <td><%= link_to "amazon", book.detail_page_url%></td>
                    <td><a class="btn btn-success btn-primary btn-large disabled"><%= $book_able %></a></td>
                    <td><%= link_to $action_lend, booklend_path(book.isbn), :class => "btn btn-success btn-large" %></td>
                </tr>
            <% else %>
                <tr id="book_<%= book.id %>" class="error">
                    <td><%= link_to image_tag(book.medium_image, :width => $book_image_width), book_path(book) %></td>
                    <td class="title"><%= link_to book.title, book_path(book) %></td>
                    <td><%= link_to "amazon", book.detail_page_url%></td>
                    <td><a class="btn btn-danger btn-large disabled"><%= $book_unable %></a></td>
                    <td><%= link_to image_tag(book.user.profile_image_url, :width => $twitter_image_width), user_path(book.user) %><br /><%= book.user.name %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>
<% end %>