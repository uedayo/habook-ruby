<h2>アカウント新規作成</h2>
<form action="users/search" method="post">
    <fieldset>
        <p>Twitter アカウントから名前、プロフィール画像を取得します。<br />
            あなたのアカウント名を入力してください。</p>
        <input type="text" name="screen_name" placeholder="例: sugimori" class="input-medium search-query">
        <input type="submit" value="送信" class="btn">
    </fieldset>
</form>
<h2>アカウント編集</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td></td>
            <td>Screen name</td>
            <td>Name</td>
            <td>Operation</td>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr id="user_<%= user.id %>">
            <td><%= link_to image_tag(user.profile_image_url, :width => "50"), "https://twitter.com/" + user.screen_name %></td>
            <td><%= link_to user.screen_name, user_path(user) %></td>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= link_to "edit", edit_user_path(user), :class => "btn btn-primary" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div>
    <%= link_to 'home', users_path %>
    <%= link_to 'new', new_user_path %>
</div>
