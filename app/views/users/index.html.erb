<%= render 'create' %>

<h2><%= $user_all %></h2>

<% if @users.empty? %>
<div class="inside">あなたが最初に登録しましょう！</div>
<% else %>

<p class="inside">たくさん本を借りて読み終えた人が上に表示されます。</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td><%= $user_name %></td>
            <td><%= $user_screen_name %></td>
            <td><%= $user_read_count %></td>
            <td><%= $operation %></td>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr id="user_<%= user.id %>">
            <td><%= link_to image_tag(user.profile_image_url, :width => $twitter_image_width, :class => "img-rounded"), user_path(user) %><br /><%= link_to user.name, user_path(user), :class => "name" %></td>
            <td><%= link_to user.screen_name, user_path(user) %></td>
            <td><%= user.read_count %></td>
            <td><%= link_to $button_edit, edit_user_path(user), :class => "btn btn-warning btn-large" %> <%= link_to $button_delete, user_path(user), :method => :delete, :class => "btn btn-danger btn-large" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>